---
let menu = [
    {
        name:'All',
        endPoint:`/`
    },
    {
        name:'Brainchild',
        endPoint:`/Brainchild`
    },
    {
        name:'Featured',
        endPoint:`/Featured`
    },
    {
        name:'Non-Profit',
        endPoint:`/Non-Profit`
    },
]
let {current} = Astro.props
---

<div class="w-full">
    <div class="flex gap-4 items-center">
        <span class="text-2xl font-serif text-gray-700">Categories:</span>

        <div class="w-full relative">
        
        <div class=" block absolute left-0 w-6 h-full bg-gradient-to-r from-gray-100 to-transparent sm:hidden"></div>

        <div class="flex gap-4 max-w-2xl overflow-x-auto scroll-smooth ">
            
            {
                menu.map(item =>{
                    if(item.name === current){
                        return(
                        <a href={'/projects'+item.endPoint} 
                        class="flex-none px-4 py-2 rounded-3xl border text-white font-serif text-lg border-gray-700 bg-gray-700 duration-100">
                            {item.name}
                        </a>
                        )
                    }
                    return(
                    <a href={'/projects'+item.endPoint} 
                        class="flex-none px-4 py-2 rounded-3xl border text-gray-700 font-serif text-lg border-gray-500 hover:border-gray-700 hover:bg-gray-700 hover:text-white duration-100">
                            {item.name}
                    </a>
                    )
                })
            }
            
        </div>

        <div class=" block absolute right-0 top-0 w-6 h-full bg-gradient-to-l from-gray-100 to-transparent sm:hidden"></div>

        </div>
    </div>
    <hr class="mt-4">
</div>